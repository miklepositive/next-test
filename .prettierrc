{
    "arrowParens": "avoid",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "endOfLine": "auto",
    "printWidth": 110,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "useTabs": false,

    "overrides": [
        {
            "files": ".eslintrc",
            "options": { "trailingComma": "none" }
        }
    ],

    "importOrder": [
        "^src/assets/(.*)$",
        "^src/components/(.*)$",
        "^src/configuration/(.*)$",
        "^src/hooks/(.*)$",
        "^src/i18n/(.*)$",
        "^src/router/(.*)$",
        "^src/screens/(.*)$",
        "^src/store/(.*)$",
        "^src/theme/(.*)$",
        "^src/types/(.*)$",
        "^src/utils/(.*)$",
        "^[.]",
        "^(?!.*[.]css$)[./].*$",
        ".css$"
    ],
    "importOrderSeparation": true
}
